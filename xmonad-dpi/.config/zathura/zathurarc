# Adjust pdf to width
set adjust-open "width"

# Set selection
set selection-clipboard clipboard

# Background & colors
set recolor true
set recolor-lightcolor "#282828"
#set recolor-lightcolor rgba(29, 31, 33, 0)
set recolor-keephue true
set default-bg "#282828"
#set default-bg rgba(29, 31, 33, 0.7)

# Highlight color
set highlight-color "#83a598"
set highlight-active-color "#fabd2f"
set highlight-transparency 0.5

