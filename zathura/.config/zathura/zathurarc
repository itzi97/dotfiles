# Adjust pdf to width
adjust-open "width"

# Set selection
set selection-clipboard clipboard

# Background & colors
set recolor true
set recolor-lightcolor "#1d1f21"
#set recolor-lightcolor rgba(29, 31, 33, 0)
set recolor-keephue true
set default-bg "#1d1f21"
#set default-bg rgba(29, 31, 33, 0.7)

# Highlight color
set highlight-color "#5f819d"
set highlight-active-color "#f0c674"
set highlight-transparency 0.5

