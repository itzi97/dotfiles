" Golang uses tabs for indentation and spaces for alignment
set tabstop=2
set shiftwidth=2
set softtabstop=2
set noexpandtab
set smarttab

" Better highlighting
let b:go_highlight_types = 1
let b:go_highlight_fields = 1
let b:go_highlight_functions = 1
let b:go_highlight_function_calls = 1
let b:go_highlight_operators = 1
let b:go_highlight_extra_types = 1
let b:go_highlight_build_constraints = 1
